<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformBasicLoginSystem.Views.PostAnnouncement">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter Username" HorizontalOptions="Center"/>
            <Entry Text="" x:Name="EntryUser"/>
            <Label Text="Enter Title" HorizontalOptions="Center"/>
            <Entry Text="" x:Name="Entrytitle"/>
            <Label Text="Enter Message" HorizontalOptions="Center"/>
            <Entry Text="" x:Name="EntryMsg"/>
            <TimePicker x:Name="dateendpicker"  />
            
            <Button Text="Post Announcement"
                TextColor="White"
                BackgroundColor="#22A7F0"
                x:Name="ButtonLogin" Clicked="ButtonLogin_Clicked"/>
               

        </StackLayout>
    </ContentPage.Content>
</ContentPage>